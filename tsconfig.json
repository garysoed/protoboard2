{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "out",
    "paths": {
      "@grapevine": ["node_modules/grapevine/export/index.ts"],
      "@grapevine/internal": ["node_modules/grapevine/export/internal.ts"],
      "@gs-testing": ["node_modules/gs-testing/export/index.ts"],
      "@gs-tools/*": ["node_modules/gs-tools/export/*"],
      "@gs-types": ["node_modules/gs-types/export/index.ts"],
      "@mask": ["node_modules/mask/export/index.ts"],
      "@moirai": ["node_modules/moirai/export/index.ts"],
      "@nabu": ["node_modules/nabu/export/index.ts"],
      "@persona": ["node_modules/persona/export/index.ts"],
      "@persona/internal": ["node_modules/persona/export/internal.ts"],
      "@persona/testing": ["node_modules/persona/export/testing.ts"],
      "@santa": ["node_modules/santa/export/index.ts"],
      "@rxjs": ["node_modules/rxjs"],
      "@rxjs/operators": ["node_modules/rxjs/operators"],
    },
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "target": "es6"
  },
  "include": [
    "demo/**/*.ts",
    "src/**/*.ts",
    "node_modules/mask/typings/*.d.ts",
  ]
}
